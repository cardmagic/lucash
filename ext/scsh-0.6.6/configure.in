AC_DEFUN(SCSH_ELF, [
  AC_MSG_CHECKING(for ELF)
  AC_CACHE_VAL(scsh_cv_elf,[
    touch conftest.c
    if ${CC} -v -o a.out conftest.c 2>&1 | grep -q __ELF__ ; then
      scsh_cv_elf=yes
    else
      scsh_cv_elf=no
    fi])
  AC_MSG_RESULT($scsh_cv_elf)
  rm -f conftest.c a.out
])
