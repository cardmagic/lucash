#!/usr/bin/ruby

require File.dirname(__FILE__) + "/../lib/lucash"

parser = Lucash.new
puts
puts 'type "Q" to quit.'
puts
while true
  puts
  print '? '
  if str = gets
    break if /q/i =~ str
    begin
      p = parser.parse(str)
      r = lucash_eval(p)
      puts p.inspect if ENV['DEBUG']
      puts r.inspect
    rescue ParseError
      puts $!
    end
  else
    exit
  end
end

